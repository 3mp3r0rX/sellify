datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Ad {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  imageUrl    String?
  category    String   // Ensure this field is present
  createdAt   DateTime @default(now())
}

